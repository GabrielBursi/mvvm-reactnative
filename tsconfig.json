{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"types": [
			"react-native",
			"jest",
			"@testing-library/jest-native",
			"@testing-library/jest-native/extend-expect"
		],
		"lib": [
			"es2019",
			"es2020.bigint",
			"es2020.promise",
			"es2020.string",
			"es2020.symbol.wellknown",
			"es2021.promise",
			"es2021.string",
			"es2021.weakref",
			"es2022.array",
			"es2022.object",
			"es2022.string"
		],
		"allowJs": true,
		"jsx": "react-native",
		"noEmit": true,
		"isolatedModules": false,
		"strict": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"rootDir": "./",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": [
		".jest/setup.ts",
		"**/*.ts",
		"**/*.tsx",
		"ReactotronConfig.js",
		"jest.config.ts"
	],
	"exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
